<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadStory">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/TenTruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Tên Truyện"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/TacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tác Giả"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/TheoDoi"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Back"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/TheoDoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="@color/black"
            android:text="Theo Dõi"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/TenTruyen"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TieuDeTruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề truyện"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/NoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung Nội dung Nội dung Nội dung Nội dung
                Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung
                Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung
                Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung
                Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung
                Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung
                Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/BinhLuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bình luận"
                android:textSize="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Comment1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/Avartar1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/acc"
                    android:scaleType="fitCenter"
                    tools:ignore="MissingConstraints,NotSibling"
                    app:layout_constraintTop_toBottomOf="@+id/BinhLuan"/>
                <TextView
                    android:id="@+id/Ten1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Ten"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/Avartar1"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/NDBL1"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Noi dung binh luan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/Avartar1"
                    app:layout_constraintTop_toBottomOf="@id/Ten1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Comment2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/Avartar2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/acc"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/white"
                    tools:ignore="MissingConstraints,NotSibling"
                    app:layout_constraintTop_toBottomOf="@+id/BinhLuan"/>
                <TextView
                    android:id="@+id/Ten2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Ten"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/Avartar2"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/NDBL2"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Noi dung binh luan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/Avartar2"
                    app:layout_constraintTop_toBottomOf="@id/Ten2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MyComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/MyAvartar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/acc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/MyNDBL"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:hint="Bình luận"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/MyAvartar"
            tools:ignore="MissingConstraints"/>
        <ImageButton
            android:id="@+id/SendCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/MyNDBL"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Bottom_Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_menu" />
</LinearLayout>