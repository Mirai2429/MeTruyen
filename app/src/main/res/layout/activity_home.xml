<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

        <!--Tao search -->
        <Button
            android:id="@+id/Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:hint="Tìm Kiếm"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_search_24"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
7
    <!--Tao Truyện đã đọc gần đây -->
    <TextView
        android:id="@+id/TruyenHayVaPhoBien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Truyện đã đọc gần đây"
        android:textSize="25dp"/>

    <!--Tao layout vuot ngang-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Tao truyen 1-->
            <LinearLayout
                android:id="@+id/pic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:padding="5dp"
                    android:src="@drawable/pic1"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="RUNAWAY"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 2-->
            <LinearLayout
                android:id="@+id/pic2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                app:layout_constraintLeft_toRightOf="@id/pic1"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:padding="5dp"
                    android:src="@drawable/pic2"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DRAGON BALL"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 3-->
            <LinearLayout
                android:id="@+id/pic3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                app:layout_constraintLeft_toRightOf="@id/pic2"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:padding="5dp"
                    android:src="@drawable/pic3"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bí ẩn của đảo lớn"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <!--Tao Truyen hay va pho bien -->
    <TextView
        android:id="@+id/TruyenDaDocGanDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Truyện hay và phổ biến"
        android:textSize="25dp"/>

    <!--Tao layout vuot doc-->
    <ScrollView
        android:layout_height="230dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Tao truyen 4-->
            <LinearLayout
                android:id="@+id/pic4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen4"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:padding="5dp"
                    android:src="@drawable/pic4"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="One Piece"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 5-->
            <LinearLayout
                android:id="@+id/pic5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen5"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic5" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Conan"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 6-->
            <LinearLayout
                android:id="@+id/pic6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen6"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:padding="5dp"
                    android:src="@drawable/pic6"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="Reign of the Superman"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 7-->
            <LinearLayout
                android:id="@+id/pic7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen7"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="200dp"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:src="@drawable/pic7"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Ngược dòng thời gian"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 8-->
            <LinearLayout
                android:id="@+id/pic8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen8"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="200dp"
                    android:padding="5dp"
                    android:src="@drawable/pic8"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Huyết sắc"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Tao truyen 9-->
            <LinearLayout
                android:id="@+id/pic9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    android:id="@+id/Truyen9"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="200dp"
                    android:padding="5dp"
                    android:src="@drawable/pic9"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="Kì Án Ánh Trăng"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Bottom_Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_menu" />
</LinearLayout>